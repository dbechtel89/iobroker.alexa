{
	"extends": "./tsconfig.json",
	// Modified config to only compile .ts-files in the src dir
	"compilerOptions": {
		"allowJs": false,
		"checkJs": false,
		"noEmit": false,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/*.test.ts"
	]
}